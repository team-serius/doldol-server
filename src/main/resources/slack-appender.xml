<included>
    <appender name="SLACK-ERROR" class="com.github.maricn.logback.SlackAppender">
        <webhookUri>https://hooks.slack.com/services/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</webhookUri>
        <channel>#error-log</channel>
        <username>doldol-error</username>
        <iconEmoji>:rotating_light:</iconEmoji>
        <colorCoding>true</colorCoding>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%msg</pattern>
        </layout>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>
</included>