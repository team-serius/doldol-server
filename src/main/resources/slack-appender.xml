<included>
    <appender name="SLACK-ERROR" class="com.github.maricn.logback.SlackAppender">
        <webhookUri>https://hooks.slack.com/services/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</webhookUri>
        <channel>#error-log</channel>
        <username>doldol-error</username>
        <iconEmoji>:rotating_light:</iconEmoji>
        <colorCoding>true</colorCoding>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </layout>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <!-- SlackAppender 디버그용 파일 appender -->
    <appender name="SLACK-DEBUG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/slack-debug.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/slack-debug.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[SLACK-DEBUG] %d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- SlackAppender 로거 디버그 설정 -->
    <logger name="com.github.maricn.logback.SlackAppender" level="DEBUG" additivity="false">
        <appender-ref ref="SLACK-DEBUG"/>
    </logger>

    <!-- ROOT 로거에서 SLACK-ERROR 사용하는지 확인용 -->
    <logger name="ROOT.SLACK" level="DEBUG" additivity="false">
        <appender-ref ref="SLACK-DEBUG"/>
    </logger>
</included>